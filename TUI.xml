<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="CooldownMainItemTemplate" mixin="CooldownViewerEssentialItemMixin" virtual="true">
		<Size x="36" y="28"/>
		<KeyValues>
			<KeyValue key="cooldownFont" value="GameFontHighlightHugeOutline" type="string"/>
			<KeyValue key="includeAsLayoutChildWhenHidden" value="true" type="boolean"/>
		</KeyValues>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" setAllPoints="true">
                    <TexCoords left="0.1" right="0.9" top="0.13" bottom="0.87"/>
                </Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture atlas="UI-HUD-CoolDownManager-IconOverlay">
					<Anchors>
						<Anchor point="TOPLEFT" x="-9" y="8"/>
						<Anchor point="BOTTOMRIGHT" x="9" y="-8"/>
					</Anchors>
				</Texture>
				<Texture parentKey="OutOfRange" setAllPoints="true" atlas="UI-CooldownManager-OORshadow">
					<Color r="1" g="1" b="1" a="0"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown parentKey="Cooldown" setAllPoints="true">
				<SwipeTexture>
					<Color r="0" g="0" b="0" a="0.8"/>
				</SwipeTexture>
				<EdgeTexture file="Interface\Cooldown\UI-HUD-ActionBar-SecondaryCooldown"/>
				<BlingTexture file="Interface\Cooldown\star4">
					<Color r="0.3" g="0.6" b="1" a="0.8"/>
				</BlingTexture>
			</Cooldown>
			<Frame parentKey="ChargeCount" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="Current" font="Interface\AddOns\TUI\Media\avantguard.ttf" justifyH="CENTER" justifyV="MIDDLE" outline="THICK">
							<Anchors>
								<Anchor point="BOTTOM" x="0" y="-8"/>
							</Anchors>
                            <FontHeight>
                                <AbsValue val="14"/>
                            </FontHeight>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="CooldownFlash" hidden="false">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="1"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="1"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Flipbook" atlas="UI-HUD-ActionBar-GCD-Flipbook" alpha="0"/>
					</Layer>
				</Layers>
				<Animations>
					<AnimationGroup parentKey="FlashAnim">
						<Alpha parentKey="HideAnim" childKey="Flipbook" duration="0" order="1" fromAlpha="0" toAlpha="0"/>
						<Alpha parentKey="ShowAnim" childKey="Flipbook" duration="0" order="1" fromAlpha="1" toAlpha="0"/>
						<FlipBook parentKey="PlayAnim" childKey="Flipbook" duration="0.75" order="1" flipBookRows="11" flipBookColumns="2" flipBookFrames="22" flipBookFrameWidth="0" flipBookFrameHeight="0"/>
					</AnimationGroup>
				</Animations>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

