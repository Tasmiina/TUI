	<Frame name="BuffBarItemTemplate" mixin="CooldownViewerBuffBarItemMixin" virtual="true">
		<Size x="220" y="20"/>
		<KeyValues>
			<KeyValue key="allowHideWhenInactive" value="true" type="boolean"/>
			<KeyValue key="includeAsLayoutChildWhenHidden" value="false" type="boolean"/>
			<KeyValue key="hideWhenInactive" value="true" type="boolean"/>
		</KeyValues>
		<Frames>

			<!-- ICON -->
			<Frame parentKey="Icon" frameLevel="512">
				<!-- Let height be defined by anchors to parent -->
				<Anchors>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
					<Anchor point="LEFT"/>
				</Anchors>

				<!-- Width will be set dynamically to match height -->
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Icon" setAllPoints="true">
							<TexCoords left="0.1" right="0.9" top="0.1" bottom="0.9"/>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture atlas="UI-HUD-CoolDownManager-IconOverlay">
							<Anchors>
								<Anchor point="TOPLEFT" x="-2" y="2"/>
								<Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
							</Anchors>
						</Texture>
						<FontString parentKey="Applications" inherits="NumberFontNormalSmall" justifyH="RIGHT">
							<Size x="32" y="15"/>
							<Anchors>
								<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<!-- Keep icon square even when height changes -->
					<OnSizeChanged>
						self:SetWidth(self:GetHeight())
					</OnSizeChanged>
				</Scripts>
			</Frame>

			<!-- STATUS BAR -->
			<StatusBar parentKey="Bar" frameLevel="511">
				<BarTexture file="Interface\AddOns\TUI\Media\Flat.tga" setAllPoints="true">
					<Color r="1.0" g="0.0" b="1.0"/>
				</BarTexture>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="4"/>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
					<Anchor point="RIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\AddOns\TUI\Media\Flat.tga">
							<Color r="0.1" g="0.1" b="0.1" a="0.4"/>
							<Anchors>
								<Anchor point="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="Pip" atlas="UI-HUD-CoolDownManager-Bar-Pip" useAtlasSize="true">
							<Color r="1.0" g="1.0" b="1.0" a="0.0"/>
						</Texture>
						<FontString parentKey="Name" inherits="NumberFontNormal" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" x="5"/>
								<Anchor point="RIGHT" x="-25"/>
							</Anchors>
						</FontString>
						<FontString parentKey="Duration" inherits="NumberFontNormal" justifyH="RIGHT">
							<Anchors>
								<Anchor point="RIGHT" x="-8"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</StatusBar>

		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

